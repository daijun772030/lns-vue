font-size(size)
  [data-dpr="1"] &
    font-size: unit(size / 2, px);/*no*/
  [data-dpr="2"] &
    font-size: unit(size, px);/*no*/
  [data-dpr="3"] &
    font-size: unit((size / 2) * 3, px);/*no*/

// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
